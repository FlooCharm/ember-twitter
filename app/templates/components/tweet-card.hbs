<div class="card">
	<div class="img-container">
		<CircleImg
			@img={{or @tweet.user.avatar 'assets/default-avatar.png'}}
		/>
	</div>
	<div class="flex column full-width">
		<div class="flex row justify-content-space-between">
			<div class="flex row">
				<div class="margin-right">
					<LinkTo 
						class="bold white"
						@route="app.profile"
						@model={{@tweet.user.id}}
					>
						{{@tweet.user.username}}
					</LinkTo>
				</div>
				<div class="grey">
					{{moment-format @tweet.createdAt 'DD/MM/YYYY, HH:mm'}}
				</div>
			</div>
			<div class="clickable" {{action this.args.deleteTweet @tweet}}>
				X	
			</div>
		</div>
		<div class="white">
			{{@tweet.description}}
		</div>
	</div>
</div>